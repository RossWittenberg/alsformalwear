<div class="container">
	<div class="col-md-12 col-lg-12">
		<div class="col-md-6 col-lg-6">
			<h2>Add a new Text Block</h2>
			<%= form_for :content, url: {action: :create} do |f| %>
			    <%= render :partial => 'spree/admin/contents/text_form', :locals => { :f => f } %>
			    <p><%= f.submit Spree.t(:create), :class => 'button-primary admin-content' %></p>
			<% end %>
		</div>
		<div class="col-md-6 col-lg-6">
			<h2>Add a new Image</h2>
			<%= form_for :content, url: {action: :create} do |f| %>
			    <%= render :partial => 'spree/admin/contents/image_form', :locals => { :f => f } %>
			    <p><%= f.submit Spree.t(:create), :class => 'button-primary admin-content' %></p>
			<% end %>
		</div>
	</div>	
</div>