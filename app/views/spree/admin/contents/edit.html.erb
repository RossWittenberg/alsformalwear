<div class="container">
	<div class="col-md-10 col-lg-10 no-pad">
		<a href="/catalog/admin/contents">
			<i class="fa fa-arrow-left"></i> Page Content Dashboard 
		</a>
		<a href=<%= "/catalog/admin/contents/#{@content.page}" %> >
			<i class="fa fa-arrow-left"></i> <%= " #{@content.page.gsub('_','-').capitalize} Content" %> 
		</a>
		<br>
		<br>
	</div>
	<div class="col-md-1 col-lg-1 col-md-offset-1 col-lg-offset-1 no-pad">
		<a href="<%= '/'+@content.page.gsub('_', '-') %>" target="_blank">
			View Page
			<i class="fa fa-arrow-right"></i> 
		</a>
	</div>
	<% if @content.content_type == "text" %>
		<%= form_for [:admin, @content] do |f| %>
		    <%= render :partial => 'spree/admin/contents/text_form', :locals => { :f => f } %>
		    <%= f.submit Spree.t(:update), :class => 'button-primary admin-content' %>
		<% end %>
	<% elsif  @content.content_type == "image"%>
		<%= form_for [:admin, @content] do |f| %>
		    <%= render :partial => 'spree/admin/contents/image_form', :locals => { :f => f } %>
		    <%= f.submit Spree.t(:update), :class => 'button-primary admin-content' %>
		<% end %>
	<% elsif  @content.content_type == "link"%>
		<%= form_for [:admin, @content] do |f| %>
		    <%= render :partial => 'spree/admin/contents/link_form', :locals => { :f => f } %>
		    <%= f.submit Spree.t(:update), :class => 'button-primary admin-content' %>
		<% end %>
		<% elsif  @content.content_type == "meta-data"%>
		<%= form_for [:admin, @content] do |f| %>
		    <%= render :partial => 'spree/admin/contents/meta_form', :locals => { :f => f } %>
		    <%= f.submit Spree.t(:update), :class => 'button-primary admin-content' %>
		<% end %>
	<% end %>	
</div>