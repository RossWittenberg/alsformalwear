<!-- MANAGED CONTENT VARIABLES -->
<% socialEventHeaderImage = @social_event_contents.find_by_description "social-event-header-image" %>
<% socialEventHeaderTitle = @social_event_contents.find_by_description "social-event-header-title" %>
<% socialEventHeaderButtonText = @social_event_contents.find_by_description "social-event-header-button-text" %>
<% socialEventHeaderButtonLink = @social_event_contents.find_by_description "social-event-header-button-link" %>
<% socialEventPromoImage = @social_event_contents.find_by_description "social-event-promo-image" %>
<% socialEventPromoTitle = @social_event_contents.find_by_description "social-event-promo-title" %>
<% socialEventPromoText = @social_event_contents.find_by_description "social-event-promo-text" %>
<% socialEventPromoButtonText = @social_event_contents.find_by_description "social-event-promo-button-text" %>
<% socialEventPromoButtonLink = @social_event_contents.find_by_description "social-event-promo-button-link" %>
<% socialEventFormTitle1 = @social_event_contents.find_by_description "social-event-form-title-1" %>
<% socialEventFormText1 = @social_event_contents.find_by_description "social-event-form-text-1" %>
<!-- PAGE CONTENT -->
<div class="landingWrapper">
  <div class="row landing-hero social-hero">
    <div class="hero-caption wedding">
          <!-- Loader -->
      <div class="slider-loader-wrapper">
          <div class="loader">
              <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10"/>
              </svg>
          </div>
      </div>
      <div class="hero-text">
        <% if socialEventHeaderTitle && socialEventHeaderTitle.text %>
          <%= socialEventHeaderTitle.text.html_safe %>
        <% else %>
          <h1>Let&#8217;s Party</h1>
          <h1>the Night Away</h1>
        <% end %>
        <% if socialEventHeaderButtonLink && socialEventHeaderButtonLink.text %>
          <% buttonLink = "#{socialEventHeaderButtonLink.text}"%>
        <% else %>
          <% buttonLink = '#form-top'%>
        <% end %>  
        <a href="<%= buttonLink %>" class="btn button-primary social-event">
          <% if socialEventHeaderButtonText && socialEventHeaderButtonText.text %>
            <%= socialEventHeaderButtonText.text %>
          <% else %>
            VIEW OFFERS
          <% end %>
        </a>
      </div>
    </div>
  </div>
  <script>
    <% if socialEventHeaderImage.image? %>
      <% socialEventHeaderImage = "#{socialEventHeaderImage.image.url}" || "asset_url('spree/frontend/landing-page/socialevents.jpg')"%>
      $(".social-hero").backstretch("<%= socialEventHeaderImage %>, {centeredY: false}");
    <% else %>
      $(".social-hero").backstretch('<%= asset_url('spree/frontend/landing-page/socialevents.jpg') %>', {centeredY: false});
    <% end %> 
  </script>

  <div class="container occasion-steps">
    <div class="row">
      <h2 class="headline">Getting it right for your big day</h2>
      <p class="headline">Al&#8217;s makes planning a breeze in four easy steps!</p>
    </div>
    
    <%= render partial: "occasion_steps" %>
  </div>

  <div class="hidden-sm hidden-xs">
    <%= render partial: "color_blocks" %>
  </div>
  <div class="hidden-md hidden-lg hidden-xl">
    <%= render partial: "mobile_color_blocks" %>
  </div>

  <div class="row landing-hero free-rental-hero">
    <div class="hero-caption wedding">
      <div class="hero-text destination-wedding">
        <% if socialEventPromoTitle && socialEventPromoTitle.text %>
          <%= socialEventPromoTitle.text.html_safe %>
        <% else %>
          <h1>How does a free</h1>
          <h1>rental sound?</h1>
        <% end %>
        <% if socialEventPromoText && socialEventPromoText.text %>
          <%= socialEventPromoText.text.html_safe %>
        <% else %>
          <p>If that's music to your ears, then listen up! Sign up to be an Al's Formal Wear Prom Representative. Get five friends to rent their tuxedos from Al's and get yours for free!</p>
        <% end %>
        <% if socialEventPromoButtonLink && socialEventPromoButtonLink.text %>
          <% buttonLink = "#{socialEventPromoButtonLink.text}"%>
        <% else %>
          <% buttonLink = "/social-event/#social-fund"%>
        <% end %>  
        <a href="<%= buttonLink %>" class="btn button-secondary white free-rental">
          <% if socialEventPromoButtonText && socialEventPromoButtonText.text %>
            <%= socialEventPromoButtonText.text.html_safe %>
          <% else %>
            SIGN UP
          <% end %>
        </a>
      </div>
    </div>
  </div>
  <script>
    <% if socialEventPromoImage.image? %>
      <% socialEventPromoImage = "#{socialEventPromoImage.image.url}" || "asset_url('spree/frontend/landing-page/socialevents.jpg')"%>
      $(".free-rental-hero").backstretch("<%= socialEventPromoImage %>, {centeredY: false}");
    <% else %>
      $(".free-rental-hero").backstretch('<%= asset_url('spree/frontend/landing-page/freerental.png') %>', {centeredY: false});
    <% end %>  
  </script>

  <div class="container-fluid group-offers-wrapper">
    <div class="row group-offers-header social-header">
      <div class="col-md-12">
        <%= image_tag 'spree/frontend/icons/group-offers.svg' %>
        <h2>GROUP OFFERS</h2>
        <p>Before planning for your next event, explore our group offers for information about fundraising and group codes.</p>
      </div>
    </div>
    <div class="container group-offers-form-wrapper">
      <div class="row form-line-break"></div>
      <a id="form-top"></a>

      <a id="social-fund"></a>
      <h3 class="form-dropdown closed">
        <% if socialEventFormTitle1 && socialEventFormTitle1.text %>
          <%= socialEventFormTitle1.text.html_safe %>
        <% else %>
          SOCIAL EVENT FUNDRAISING
        <% end %>
        </h3>
      <%= render partial: "social_events_form", locals: { socialEventFormText1: socialEventFormText1 }  %>
  </div>

  <div class="container">
    <div class="row">
      <div class="row line-break"></div>
    </div>
  </div>

  <div class="container tux-text">
    <div class="row">
      <h2 class="headline">EXPLORE OUR TUXEDO &#38; SUIT COLLECTION</h2>
      <p class="headline">With dozens of selections, rest assured that we have your desired style</p>
    </div>
  </div>

  <a id="social-event-gallery"></a>
  <div class="hidden-sm hidden-xs">
    <%= render partial: "explore_collection_slider" %>
  </div>
  <div class="hidden-md hidden-lg hidden-xl">
    <%= render partial: "mobile_explore_collection_slider" %>
  </div>

</div>