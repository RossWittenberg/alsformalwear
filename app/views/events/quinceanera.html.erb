<% quinceaneraHeaderTitle = @quinceanera_contents.find_by_description "quinceanera-header-title" %>
<% quinceaneraHeaderImage = @quinceanera_contents.find_by_description "quinceanera-header-image" %>
<% quinceaneraHeaderButtonText = @quinceanera_contents.find_by_description "quinceanera-header-button-text" %>
<% quinceaneraHeaderButtonLink = @quinceanera_contents.find_by_description "quinceanera-header-button-link" %>


<div class="landingWrapper">
  <div class="row landing-hero quince-hero">
    <div class="hero-caption wedding">
          <!-- Loader -->
      <div class="slider-loader-wrapper">
          <div class="loader">
              <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10"/>
              </svg>
          </div>
      </div>
      <div class="hero-text">
        <% if quinceaneraHeaderTitle && quinceaneraHeaderTitle.text %>
          <%= quinceaneraHeaderTitle.text.html_safe %>
        <% else %>
          <h1>Quincea&#241;era?</h1>
          <h1>Al&#8217;s has your look!</h1>
        <% end %>
        <% if quinceaneraHeaderButtonLink && quinceaneraHeaderButtonLink.text %>
          <% buttonLink = "#{quinceaneraHeaderButtonLink.text}"%>
        <% else %>
          <% buttonLink = '/quinceanera?appointment_form=true'%>
        <% end %>  
        <a href="<%= buttonLink %>" class="btn button-primary wedding">
          <% if quinceaneraHeaderButtonText && quinceaneraHeaderButtonText.text %>
            <%= quinceaneraHeaderButtonText.text %>
          <% else %>
            MAKE APPOINTMENT
          <% end %>
        </a>
      </div>
    </div>
  </div>

  <script>
    <% if quinceaneraHeaderImage.image? %>
      <% quinceaneraHeaderImage = "#{quinceaneraHeaderImage.image.url}" || "asset_url('spree/frontend/landing-page/quinceKids.jpg')"%>
      $(".quince-hero").backstretch("<%= quinceaneraHeaderImage %>, {centeredY: false}");
    <% else %>
      $(".quince-hero").backstretch('<%= asset_url('spree/frontend/landing-page/quinceKids.jpg') %>', {centeredY: false});
    <% end %>  
  </script>

  <div class="container occasion-steps">
